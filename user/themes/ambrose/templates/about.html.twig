{% extends 'partials/base.html.twig' %}


{% block content %}
<div class="wrapper about">
    <div class="image">
        {% for key, item in page.header.image %}
            <img class="parallax-image" src="{{ url(item.path) }}" alt="{{ item.name }}" /> 
        {% endfor %}
    </div>
    <div class="body">
       <div class="social-links">
           <a href=""><i class="fa fa-instagram"></i></a>
           <a href=""><i class="fa fa-youtube"></i></a>
           <a href="mailto:{{ page.header.email }}"><i class="fa fa-envelope-o"></i></a>
       </div>
        {{ page.header.content | markdown }}
    </div>
</div>

<div class="wrapper contact-form">
   <h2>Get in touch</h2>
    {% include "forms/form.html.twig" %}
</div>
{% endblock %}


